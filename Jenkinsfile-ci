pipeline {
  agent any

  environment {
    SONARQUBE = 'SonarQube'
    DOCKER_IMAGE = 'kiranitth/primevideo-app:latest'
    SCANNER_HOME = tool 'sonar-scanner'
  }

  tools {
    nodejs 'node18'
    jdk 'jdk-17'
  }

  stages {
    stage('ğŸ“¥ Clone Code from GitHub') {
      steps {
        git branch: 'master',
            credentialsId: 'github-token',
            url: 'https://github.com/kirankumaritth/amazon-prime-video-devsecops.git'
      }
    }

    stage('ğŸ” SonarQube Code Analysis') {
      environment {
        PATH = "${SCANNER_HOME}/bin:${env.PATH}"
      }
      steps {
        withSonarQubeEnv("${SONARQUBE}") {
          sh 'sonar-scanner -Dsonar.projectKey=prime-video -Dsonar.sources=.'
        }
      }
    }

    stage('ğŸ³ Build Docker Image') {
      steps {
        sh 'docker build -t $DOCKER_IMAGE .'
      }
    }

    stage('ğŸ›¡ï¸ Trivy Image Scan') {
      steps {
        sh 'trivy image $DOCKER_IMAGE || true'
      }
    }

    stage('ğŸ“¤ Push Image to DockerHub') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
          sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
          sh 'docker push $DOCKER_IMAGE'
        }
      }
    }

    stage('ğŸš€ Trigger CD Pipeline') {
      steps {
        script {
          try {
            echo "ğŸ” Trying to trigger CD pipeline 'primevideo-cd'..."
            build job: 'primevideo-cd', wait: false
            echo "âœ… CD pipeline triggered successfully."
          } catch (err) {
            echo "âš ï¸ CD pipeline 'primevideo-cd' not found or not configured yet."
            echo "â„¹ï¸ CI pipeline completed. Once CD is created, this stage will trigger it automatically."
          }
        }
      }
    }
  }

  post {
    success {
      echo 'âœ… CI pipeline completed successfully.'
    }
    failure {
      echo 'âŒ CI pipeline failed. Check console output for more details.'
    }
  }
}
